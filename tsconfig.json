{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
	"lib": [
      "ES5",
      "ES2015.Promise",
      "ES2015.Symbol",
      "ES2015.Iterable",
      "DOM"
    ],
    "module": "umd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./_build",
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "target": "ES5",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "formatCodeOptions": {
    "convertTabsToSpaces": false,
    "insertSpaceAfterCommaDelimiter": true,
    "insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
    "insertSpaceAfterSemicolonInForStatements": true
  },
  "files": [
    "src/browser.ts",
    "src/client.ts",
    "src/lib/executors/Node.ts",
    "src/lib/executors/WebDriver.ts"
  ]
}
