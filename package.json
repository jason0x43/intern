{
  "name": "intern",
  "version": "4.0.0-pre",
  "main": "intern.js",
  "description": "Intern. A next-generation code testing stack for JavaScript.",
  "homepage": "http://theintern.io/",
  "license": "BSD-3-Clause",
  "bugs": "https://github.com/theintern/intern/issues",
  "keywords": [
    "javascript",
    "test",
    "unit",
    "testing",
    "ci",
    "continuous integration",
    "bdd",
    "tdd",
    "xunit",
    "istanbul",
    "chai",
    "dojo",
    "toolkit",
    "selenium",
    "sauce labs",
    "code coverage"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/theintern/intern.git"
  },
  "files": [
	  "*.d.ts",
	  "*.js",
	  "*.js.map",
	  "bin",
	  "browser",
	  "lib",
	  "tasks",
	  "tests",
	  "types"
  ],
  "bin": {
    "intern-client": "./bin/intern-client.js",
    "intern-runner": "./bin/intern-runner.js"
  },
  "scripts": {
    "build": "intern-dev-clean && stylus src/lib/reporters/html/html.styl && intern-dev-build",
    "postbuild": "intern-dev-browserify",
    "browserify": "intern-dev-browserify",
    "clean": "intern-dev-clean",
    "lint": "intern-dev-lint",
    "release": "intern-dev-release",
    "test": "intern-dev-build && NODE_PATH=_build node _build/tests/example.node.js",
    "watch": "ts-node support/watch.ts"
  },
  "dependencies": {
    "@types/benchmark": "~1.0.30",
    "@types/chai": "~3.4.34",
    "@types/charm": "~1.0.0",
    "@types/source-map": "~0.1.28",
    "@types/ws": "~0.0.38",
    "benchmark": "2.1.1",
    "chai": "3.5.0",
    "charm": "0.2.0",
    "diff": "1.1.0",
    "digdug": "https://github.com/jason0x43/digdug/releases/download/2.0.0-pre/digdug-2.0.0-pre.tgz",
    "dojo-core": "2.0.0-alpha.19",
    "dojo-interfaces": "2.0.0-alpha.10",
    "glob": "7.0.3",
    "istanbul": "0.4.1",
    "leadfoot": "https://github.com/jason0x43/leadfoot/releases/download/2.0.0-pre/leadfoot-2.0.0-pre.tgz",
    "lodash-amd": "4.16.4",
    "mime-types": "2.1.13",
    "platform": "1.3.1",
    "source-map": "0.1.33",
    "ws": "2.1.0"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/chokidar": "^1.4.29",
    "@types/diff": "^0.0.31",
    "@types/glob": "^5.0.30",
    "@types/grunt": "^0.4.20",
    "@types/node": "^6.0.0",
    "@types/shelljs": "^0.3.32",
    "browserify": "^14.1.0",
    "dojo-loader": "2.0.0-beta.7",
    "intern": "~3.4.2",
    "intern-dev": "https://github.com/theintern/intern-dev/releases/download/0.1.7/intern-dev-0.1.7.tgz",
    "ts-node": "^2.0.0",
    "tslint": "^4.4.0",
    "typescript": "^2.2.0"
  },
  "internDev": {
    "resources": {
      "src": [
        "tests/example.intern.js",
		{ "base": "_build/src", "pattern": "**/*.d.ts" }
      ],
      ".": [
		"src/browser/remote.html",
		"src/**/*.css",
        "tests/**/*.xml",
        "tests/**/*.js",
        "tests/**/*.html"
      ]
    },
	"browserify": {
	  "src/browser/intern.js": [
	    "src/browser/intern.js"
	  ],
	  "src/browser/remote.js": [
		"src/browser/remote.js"
	  ],
	  "src/browser/loaders/dojo.js": [
		"src/browser/loaders/dojo.js"
	  ],
	  "src/browser/loaders/script.js": [
		"src/browser/loaders/script.js"
	  ]
	},
    "testConfig": "tests/selftest.intern.js"
  }
}
